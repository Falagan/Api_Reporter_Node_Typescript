{
  "name": "nodejsts",
  "version": "1.0.0",
  "description": "Api for Reporter in Node and typescript",
  "nyc": {
    "check-coverage": false,
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "lib/**/**.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "lib/test/coverage"
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "ext": "ts",
    "ignore": [
      "*.test.ts"
    ],
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "main": "lib/server.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node lib/server.ts",
    "start": "nodemon ./lib/server.ts",
    "prod": "npm run build && npm run start",
    "test": "nyc mocha --require ts-node/register lib/test/*.ts",
    "tslintRepo": "tslint -t json -o report.json --project tsconfig.json",
    "sonar": "sonar-scanner",
    "updateSwagger": "oas generate --pretty >%userprofile%/desktop/info.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.1",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "mongoose": "^5.4.9",
    "oas": "^0.8.13",
    "swagger-ui-express": "^4.0.2",
    "ts-node": "^8.0.2",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "sonar-scanner": "^3.1.0",
    "tslint": "^5.16.0",
    "tslint-sonarts": "^1.9.0"
  }
}
